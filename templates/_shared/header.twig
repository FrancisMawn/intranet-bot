<header>
    <div id="wb-bnr" class="container">
        <section id="wb-lng" class="text-right">
            <h2 class="wb-inv">{{ 'Language selection'|t }}</h2>
            <ul class="list-inline margin-bottom-none">
                <li>{% include '_shared/language' %}</li>
            </ul>
        </section>
        <div class="row">
            <div class="brand col-xs-5 col-md-4">
                <a href="{{ siteUrl }}"><img src="/dist/gcweb/assets/sig-blk-en.svg" alt=""><span class="wb-inv"> Government of Canada / <span lang="fr">Gouvernement du Canada</span></span></a>
            </div>
            <section id="wb-srch" class="col-lg-8 text-right">
                <h2>{{ 'Search'|t }}</h2>
                <form action="{{ url('search'|t) }}" method="get" name="cse-search-box" role="search" class="form-inline">
                    <div class="form-group">
                        <label for="wb-srch-q" class="wb-inv">{{ 'search-intranet'|t }}</label>
                        <input id="wb-srch-q" list="wb-srch-q-ac" class="wb-srch-q form-control" name="q" type="search" value="" size="34" maxlength="170" placeholder="{{ 'search-intranet'|t }}">
                        <datalist id="wb-srch-q-ac"></datalist>
                    </div>
                    <div class="form-group submit">
                        <button type="submit" id="wb-srch-sub" class="btn btn-primary btn-small" name="wb-srch-sub"><span class="glyphicon-search glyphicon"></span><span class="wb-inv">{{ 'Search'|t }}</span></button>
                    </div>
                </form>
            </section>
        </div>
    </div>
